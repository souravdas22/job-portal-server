<!DOCTYPE html>
<html lang="en">
  <%- include('header') %>

  <body class="app sidebar-mini rtl">
    <!-- Navbar-->
    <%- include('navbar') %>

    <!-- Sidebar menu-->
    <div class="app-sidebar__overlay" data-toggle="sidebar"></div>
    <%- include('sidebar') %>

    <main class="app-content">
      <div class="app-title">
        <div>
          <h1>Job Details</h1>
        </div>
        <ul class="app-breadcrumb breadcrumb">
          <li class="breadcrumb-item"><i class="fa fa-home fa-lg"></i></li>
          <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
        </ul>
      </div>
      <div class="banner mx-0 position-relative">
        <img
          class="add-job-banner"
          src="/admin_assets/images/single_page_header.png"
          alt="banner"
        />
        <div class="banner-text">
          <h1 class="text-white">Job Details</h1>
          <nav aria-label="Breadcrumb">
            <ul>
              <li><a href="/admin">Dashboard</a></li>
              <li><span>»</span></li>
              <li><a href="/jobs">Jobs</a></li>
              <li><span>»</span></li>
              <li><a href="/add-job">Job Details</a></li>
            </ul>
          </nav>
        </div>
      </div>
      <div class="container mt-5">
        <div class="row">
          <div class="col-8 border border-3 border-black">
            <div class="row">
              <div
                class="col-5 p-5 shadow-sm d-flex flex-column align-items-center justify-content-around"
              >
                <img
                  src="/<%= job.image %>"
                  class="h-50 w-50 rounded-circle"
                  alt=""
                />
                <button class="btn1 mt-3"><%= job.title  %></button>
                
              </div>
              <div class="col-7 shadow-sm p-4">
                <P><i class="fa-solid fa-wallet mx-2"></i>Salary:  <%= job.salary %></P>
                <P><i class="fa-solid fa-calendar-days mx-2"></i>Job Type:  <%= job.jobType %></P>
                <P><i class="fa-regular fa-user mx-2"></i>Openings: <%= job.vaccancies %> </P>
                <p >
                  <% job.skills.forEach(skill => { %>
                   <span class="mr-2 hazy-badge"><%= skill  %></span>
                  <% }) %>
                </p>
              </div>
            </div>
            <div class="description mt-3 shadow-sm">
              <h3 class="p-3 bg-dark text-white">Job Description</h3>
              <p class="p-4">
               <%= job.description %></p>
              </p>
            </div>
           
          </div>
          <div class="col-4 shadow-sm px-0">
            <div class="d-flex justify-content-center align-items-center p-4 mt-4 ">
              <h5 class="bg-success p-2 rounded-circle mx-2">
                <i class="fa-solid fa-location-pin text-white"></i>
              </h5>
              <h3 >Location</h3>
            </div>
            <hr />
            <h3 class="text-center"><%= job.location %></h3>
            <hr />
             <div class="category mt-5 shadow-sm mx-0">
              <h3 class="p-3 bg-dark text-white text-center">Category</h3>
              <p class="p-4 text-center">
              <%= job.category  %>
              </p>
            </div>
<!-- <a href="/admin/edit-job"><button class="btn btn-success mt-2">EDIT JOB</button></a> -->

